    margin: 0 auto;
}
.ui-header{
    background: #0a102a;
    color: #fff;
    font-size: 18px;

}
.ui-header span{
    display: inline-block;
    font-weight:bold;
    vertical-align: middle;
    padding: 0 20px;
    font-size: 30px;
    width: 12%;
}
.ui-menu{
    display: inline-block;
    vertical-align: middle;
    width: 78%;
    padding: 0 20px;
}

.ui-menu li{
    width: 20%;
