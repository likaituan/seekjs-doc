            <li data-event="go:api">API</li>
            <li data-event="go:http://seekjs.club:2000">{$Lang.forum}</li>
            <li data-event="go:http://blog.likaituan.me:2006/#list?key=seekjs">{$Lang.blog}</li>
            <li data-event="go:http://github.com/likaituan/seekjs">GitHub</li>
        </ul>
