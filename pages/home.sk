    <div id="features">
        <div class="feats">
            <div class="feat">
                <h2><span class="icon simple"></span>{$Lang.three_in_one}</h2>
                <p>{$lang.three_in_one_des}</p>
            </div>
            <div class="feat">
                <h2><span class="icon powerful"></span>{$lang.data_driver}</h2>
                <p>{$lang.data_driver_des}</p>
            </div>
            <div class="feat">
                <h2><span class="icon compact"></span>{$lang.node_modular}</h2>
                <p>{$lang.node_modular_des}</p>
            </div>
